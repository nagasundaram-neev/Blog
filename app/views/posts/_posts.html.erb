<%= link_to "New Post", new_post_path, class: "btn btn-success", :style => "margin: 5px 500px 5px 500px" %>

<dic class="flash_notice"><div class="alert alert-success"> <%= notice %> </div></div>
<ul class="nav nav-pills nav-stacked">
<li class="active">
    <a href="#">
      <span class="badge pull-right"><%= Post.count %></span>
      Number of Posts 
    </a>
  </li>
</ul>
<table class="table table-hover">
  <tbody><tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "Edit", edit_post_path(post), :remote => true, class: "btn btn-warning" %></td>
      <td><%= link_to "Destroy", post, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger"  %></td>
    </tr>
  <% end %>
  </tbody>
</table>

